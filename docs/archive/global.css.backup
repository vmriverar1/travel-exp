/**
 * Global CSS Variables
 * Machu Picchu Peru - Design System
 */

:root {
    /* Colors - Primary Palette */
    --color-primary: #d46a3f;        /* Terracota */
    --color-secondary: #5a8f7b;      /* Green */
    --color-accent: #f4c430;         /* Gold */

    /* Colors - Text */
    --color-text: #2c2c2c;           /* Dark gray */
    --color-text-light: #6b6b6b;     /* Medium gray */
    --color-text-lighter: #9e9e9e;   /* Light gray */

    /* Colors - Background */
    --color-bg: #ffffff;             /* White */
    --color-bg-light: #f8ece4;       /* Beige */
    --color-bg-dark: #1a1a1a;        /* Almost black */
    --color-overlay: rgba(0, 0, 0, 0.6);

    /* Typography */
    --font-size-xs: 12px;
    --font-size-sm: 14px;
    --font-size-base: 16px;
    --font-size-lg: 18px;
    --font-size-xl: 20px;
    --font-size-2xl: 24px;
    --font-size-3xl: 32px;
    --font-weight-normal: 400;
    --font-weight-medium: 500;
    --font-weight-semibold: 600;
    --font-weight-bold: 700;
    --line-height-tight: 1.2;
    --line-height-normal: 1.5;
    --line-height-relaxed: 1.6;

    /* Spacing Scale */
    --spacing-xs: 0.5rem;    /* 8px */
    --spacing-sm: 1rem;      /* 16px */
    --spacing-md: 1.5rem;    /* 24px */
    --spacing-lg: 2rem;      /* 32px */
    --spacing-xl: 3rem;      /* 48px */
    --spacing-2xl: 4rem;     /* 64px */
    --spacing-3xl: 6rem;     /* 96px */

    /* Layout */
    --header-height: 80px;
    --aside-width: 400px;
    --max-width: 1280px;
    --border-radius-sm: 4px;
    --border-radius-md: 8px;
    --border-radius-lg: 12px;
    --border-radius-full: 9999px;

    /* Transitions */
    --transition-fast: 0.2s ease;
    --transition-medium: 0.3s ease;
    --transition-slow: 0.5s ease;

    /* Z-index Scale */
    --z-base: 1;
    --z-dropdown: 100;
    --z-sticky: 500;
    --z-header: 1000;
    --z-overlay: 1050;
    --z-aside: 1100;
    --z-modal: 1200;
    --z-tooltip: 1300;

    /* Shadows */
    --shadow-sm: 0 1px 2px 0 rgba(0, 0, 0, 0.05);
    --shadow-md: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
    --shadow-lg: 0 10px 15px -3px rgba(0, 0, 0, 0.1);
    --shadow-xl: 0 20px 25px -5px rgba(0, 0, 0, 0.1);

    /* Footer Color Palette */
    --color-footer-bg: #003f48;              /* Azul petróleo oscuro */
    --color-footer-legal-bg: #002f36;        /* Más oscuro para barra legal */
    --color-footer-text: #ffffff;            /* Texto principal */
    --color-footer-text-muted: #bfcfd3;      /* Texto secundario */
    --color-footer-accent: #d58a50;          /* Dorado/terracota */
    --color-footer-border: rgba(255, 255, 255, 0.1); /* Bordes sutiles */

    /* Additional spacing */
    --spacing-2xs: 0.25rem;  /* 4px */
    --container-max-width: 1280px;
}

/* Global Reset */
*, *::before, *::after {
    box-sizing: border-box;
    margin: 0;
    padding: 0;
}

/* Utility Classes */
.visually-hidden {
    position: absolute;
    width: 1px;
    height: 1px;
    margin: -1px;
    padding: 0;
    overflow: hidden;
    clip: rect(0, 0, 0, 0);
    white-space: nowrap;
    border: 0;
}

.container {
    max-width: var(--max-width);
    margin: 0 auto;
    padding: 0 var(--spacing-md);
}

:focus:not(:focus-visible) {
    outline: none;
}